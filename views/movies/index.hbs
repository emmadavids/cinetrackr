<!DOCTYPE html>
<html lang="en">

<style>
  .search-container {
    display: flex;
    align-items: center;
    width: 300px;
    /* Adjust the width as per your preference */
    margin: 0 auto;
    /* Centers the search bar horizontally */
  }

  .search-input {
    flex: 1;
    padding: 8px;
  }

  .search-button {
    padding: 8px 12px;
  }
</style>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Movies</title>

  {{!--
  <link rel="stylesheet" href="styles.css"> --}}
</head>

<body>

  <header>
    <div class="container-fluid px-0">
      <nav class="navbar navbar-expand-lg shadow-sm navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="sessions/new">
            <img src="/images/logo.png" alt="Logo" width="100" height="40" class="d-inline-block align-text-top">

          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a href="../profile" class="text-decoration-none">My profile</a>
          <a class="new-post-link text-decoration-none ps-4" href="/posts/new">Films</a>
          <a class="new-post-link text-decoration-none ps-4" href="/posts/new">Shows</a>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNavAltMarkup">
              <form action='/sessions?_method=DELETE' method='POST'>
                <input id="logout_button" type="submit" value="Log Out">
              </form>
            </div>
            <script>
              const dropdownItems = document.getElementsByClassName('dropdown-item');
              Array.from(dropdownItems).forEach(item => {
                item.addEventListener('click', handleGenreSelection);
              });

              function handleGenreSelection(event) {
                const selectedGenre = event.target.value;
                const genreInput = document.getElementById('search-input-genre');
                genreInput.value = selectedGenre;
                handleSearch(); // Trigger search when a genre is selected
              }
              function handleSearch() {
                const title = document.getElementById('search-input-title').value;
                const genre = document.getElementById('search-input-genre').value;
                const releaseDate = document.getElementById('search-input-release-date').value;
              }
            </script>
          </div>
        </div>
      </nav>
    </div>
  </header>







  {{!--search by title--}}
  <form action="/movies/search" method="post">
    <div class="search-container">
      <input type="search" class="form-control" id="search-input-title" name="title" placeholder="title">
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"
          id="search-input-genre" name="genre" placeholder="genre">
          Genre
        </button>
        <ul class="dropdown-menu">
          <li><button class="dropdown-item" type="button" name="genre" value="Action">Action</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Adventure">Adventure</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Animation">Animation</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Comedy">Comedy</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Crime">Crime</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Documentary">Documentary</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Drama">Drama</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Family">Family</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Fantasy">Fantasy</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="History">History</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Horror">Horror</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Music">Music</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Mystery">Mystery</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Romance">Romance</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Science Fiction">Science Fiction</button>
          </li>
          <li><button class="dropdown-item" type="button" name="genre" value="Thriller">Thriller</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="TV Movie">TV Movie</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="War">War</button></li>
          <li><button class="dropdown-item" type="button" name="genre" value="Western">Western</button></li>
        </ul>
      </div>
      <input type="search" class="form-control" id="search-input-release-date" name="release_date"
        placeholder="Release date">
      <button type="submit" id="search-button" class="btn btn-outline-primary">Search</button>
    </div>
  </form>


  {{!-- Popular movies --}}
  <div id="movie-latest-popular-container">
    {{#each movies}}
    <div>
      <img src="https://image.tmdb.org/t/p/original/{{poster_path}}" alt="{{title}}" width="200" height="300">
      <span>{{title}}</span>
    </div>
    {{/each}}
  </div>
  {{!-- End of popular movies --}}


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
</body>

</html>